<div class="container">
  <%= flash[:notice] %>

  <div class="col-md-12">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
  <div class="col-md-12">

    <h3>Comments</h3>
    <ul>
      <% if @post.comments.any? %>

        <% @post.comments.each do |comment| %>
            <li><%= comment.comment_text %></li>
            <%= link_to "Edit", edit_post_comment_path(comment.post_id, comment.id) %> |
            <%= link_to "Delete", post_comment_path(comment.post_id, comment.id),
                                  :data => {:confirm => "Delete this comment?",
                                            :method => "delete"} %>
    <br>
        <% end %>
      <% end %>
    </ul>
    <hr>

  <%= link_to "Add a Comment", new_post_comment_path(@post), class: "btn btn-sm btn-info" %>

  <hr>

  | <%= link_to "Edit", edit_post_path,
                              :class => "btn btn-sm btn-danger" %> |
    <%= link_to "Delete", post_path(@post), class: "btn btn-sm btn-danger",
                              :data => { :confirm => "Delete this blog post?",
                                      :method => "delete"} %> |

</div>
